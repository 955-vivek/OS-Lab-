#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

int main() {
    pid_t pid = fork();

    if (pid > 0) {
        printf("Parent process is sleeping...\n");
        sleep(10);
    } else if (pid == 0) {
        printf("Child process exiting...\n");
        exit(0);
    } else {
        printf ("No process created\n");
    }
    return 0;
}
